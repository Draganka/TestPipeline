<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project name="mobile_Automation_GC" default="main" basedir=".">

	<target name="report1">
		<junitreport todir="target/surefire-reports/Selenium Suite">
			<fileset dir="target/surefire-reports/Selenium Suite">
				<include name="**/TEST-*.xml"/>
			</fileset>
			<report format="noframes" todir="${basedir}\target\surefire-reports\Selenium Suite\html"/>
		</junitreport>
	</target>

	<target name="report2" depends="report1">
		<xslt
		       basedir="${basedir}\target\surefire-reports\Selenium Suite"
		       destdir="${basedir}\target\surefire-reports\Selenium Suite\html\finalreport"
		       includes="*.xml"
		       style="${basedir}\report.xsl"/>
	</target>

	<target name="main" depends="report1, report2">
		<description>Main target</description>
	</target>

</project>
